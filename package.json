{
  "name": "@lydiots/sprites",
  "version": "0.1.0",
  "description": "TypeScript-first sprite library for Lydia's interactive games with CDN-hosted assets.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p tsconfig.json",
    "build:atlas": "node scripts/buildAtlas.js",
    "generate:types": "node scripts/generate-types.js",
    "deploy:assets": "node scripts/deploy-assets.js",
    "setup:netlify": "node scripts/setup-netlify-cdn.js",
    "prepublishOnly": "npm run build && npm run generate:types"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lydiots/sprites.git"
  },
  "keywords": [
    "sprites",
    "game",
    "animation",
    "pixijs",
    "atlas",
    "texture",
    "character",
    "typescript",
    "gamedev",
    "spritesheet",
    "2d",
    "graphics"
  ],
  "author": "Raymund Ács",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lydiots/sprites/issues"
  },
  "homepage": "https://github.com/lydiots/sprites#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "typescript": "^5.8.3"
  }
}